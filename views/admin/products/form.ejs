<form method="post" action="<%= product && product._id ? ('/admin/products/' + product._id + '/edit') : '/admin/products/add' %>">
  <label>Name<br><input name="name" value="<%= product.name || '' %>" required></label><br>
  <label>Price<br><input name="price" type="number" step="0.01" value="<%= product.price || '' %>" required></label><br>
  <label>Category<br><input name="category" value="<%= product.category || '' %>" required></label><br>
  <label>Image URL<br><input name="image" value="<%= product.image || '' %>"></label><br>
  <label>Description<br><textarea name="description"><%= product.description || '' %></textarea></label><br>
  <button type="submit" class="btn">Save</button>
  <a href="/admin/products" class="btn">Cancel</a>
</form>
