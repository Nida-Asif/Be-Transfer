<div class="admin-topbar">
  <h1>Products</h1>
  <div class="actions"><a class="btn" href="/admin/products/add">+ Add Product</a></div>
</div>
<table class="table">
  <thead><tr><th>Name</th><th>Price</th><th>Category</th><th style="width:180px">Actions</th></tr></thead>
  <tbody>
    <% products.forEach(function(p){ %>
    <tr>
      <td><%= p.name %></td>
      <td><%= p.price %></td>
      <td><%= p.category %></td>
      <td>
        <a class="btn" href="/admin/products/<%= p._id %>/edit">Edit</a>
        <form action="/admin/products/<%= p._id %>/delete" method="post" style="display:inline">
          <button data-confirm-delete class="btn-danger" type="submit">Delete</button>
        </form>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>
